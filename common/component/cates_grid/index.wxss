/* common/component/cates_grid/index.wxss */
.cates_button_container {
  background: white;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  padding-left: 1%;
  padding-right: 1%;
}

.cate_button {
  width: 29.3%;
  height: 140rpx;
  margin-left: 2%;
  margin-right: 2%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.cate_button_img {
  width: 65rpx;
  height: 65rpx;
  background: white;
}

.cate_button_name {
  padding-top: 10rpx;
  font-size: 26rpx;
  color: white;
}