/**index.wxss**/
.search {
  background-color: #FA5858;
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
}
.location {
  float: left;
  color: white;
  font-size: 28rpx;
  width: 85rpx;
  line-height: 85rpx;
  margin-left: 60rpx;
}
.triangle-up {
    width: 0;
    height: 0;
    border-left: 10rpx solid transparent;
    border-right: 10rpx solid transparent;
    border-top: 10rpx solid white;
    float: left;
    margin-top: 36rpx;
    margin-left: 10rpx;
}
.search_input_view {
  width:428rpx;
  float:left;
  margin-left:26rpx;
  line-height: 72rpx;
  margin-top:16rpx;
  background-color: white;
}
.search_input_view icon {
  float: left;
  height: 42rpx;
  width: 42rpx;
  margin-left: 10rpx;
  margin-right: 2rpx;
  margin-top:6rpx;

}
.search_placeholder {
  background-image: ();
  color :rgb(132, 133, 134);
  font-size: 22rpx;
}

.search_input {
  background-color: white;
}

.index_cate {
  clear: both;
  width: 100%;
  margin-top: 10rpx;
  flex-wrap:wrap;
  height: auto;
  display: flex;
}

.index_cate .single_cate {
  width:15.3%;
  height:140rpx;
  margin-left:2%;
  margin-right:2%;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  margin-top:20rpx;
  text-align: center;
}

.index_cate .single_cate image{
  height: 83rpx;
  width: 83rpx;
}

.index_cate .single_cate .single_cate_name {
  font-family:"iconfont" !important;
  font-size:28rpx;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.space_10_withcolor {
  margin-top: 40rpx;
  height: 20rpx;
  background: linear-gradient(rgb(245,245,245), rgb(255,255,255));
}

.space_10_white {
  margin-top: 10rpx;
  height: 10rpx;
}


.notice_bar {
  margin-left: 5%;
  display: flex;
  height: 60rpx;
  align-items: center;  
}
.notice_bar .notice_ad {
  font-family:"iconfont" !important;
  font-size:28rpx;
  font-style:normal;
  color: #FF0000;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  display:inline-block;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 10rpx;
}

.notice_bar .notice_swiper{
  flex-direction: row;
  flex-wrap: wrap;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
  width: 50%;
}
.notice_item {
  font-family:"iconfont" !important;
  font-size:28rpx;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  display:inline-block;
}
.vertical_line_1px {
  flex-direction: row;
  flex-wrap: wrap;
  width: 2rpx;
  height: 60rpx;
  background-color:	#DCDCDC;
}
.index_ad {
  width: 93%;
  height: 146rpx;
  background-color: #FA5858;
  margin: auto
}
.calendar {
  font-family:"iconfont" !important;
  font-size:28rpx;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  display:inline-block;
  padding-right: 10rpx;
}

.content_container {
  width: 93%;
  margin: auto;
}
