/* pages/publish/index.wxss */
.statement{
  background-color: white;
}
.statement_text {
  margin: 24rpx;
  display: inline-block;
  background-color: #e8f5fd;
  padding: 20rpx;
  font-size: 28rpx;
  color: #9ea8b0;
}
.join {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-top: 3rpx;
  margin-bottom: 3rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  justify-content: space-between;
}
.join_left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.join_icon{
  width: 55rpx;
  height: 55rpx;
  background-color: red;
  margin-left: 24rpx;
  margin-right: 20rpx;
}
.join_title_container{
  display: flex;
  flex-direction: column;
}
.join_title_text{
  color: #585858;
  font-size: 30rpx;
}
.join_detail_text {
  color: #9ea8b0;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.join_arrow{
  width: 30rpx;
  height: 30rpx;
  background-color: red;
  margin-right: 30rpx;
}
.choose_cate {
  display: block;
  line-height: 70rpx;
  text-align: center;
  margin-top: 3rpx;
  font-size: 24rpx;
  color: #747474;
  background-color:white;
  margin-bottom: 3rpx;
}